<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <template id="portal_my_home_forecast" name="Forecast Details"
         customize_show="True" inherit_id="portal.portal_my_home">
        <xpath expr="//div[hasclass('o_portal_docs')]" position="inside">
            <t t-call="portal.portal_docs_entry">
                <t t-set="title">Forecast Details</t>
                <t t-set="url" t-value="'/my/forecast'"/>
                <t t-set="placeholder_count" t-value="'forecast_count'"/>
            </t>
        </xpath>
   </template>
</odoo>